model Payment {
  id            String   @id @default(uuid())
  
  sessionId     String   @unique
  transactionId String?
  amount        Int?
  currency      String
  status        String
  paymentMethod String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

// -----------relation----------------------
  userId        String
  user          User     @relation(fields: [userId], references: [id])

planId        String
plan          Paymentplan   @relation(fields: [planId], references: [id])
  @@map("payments")
}

model Paymentplan {
  id            String   @id @default(uuid())
  name          String?   @unique
  Price         Int  
  billingCycle  BillingCycle  
  shortBio      String?
  features      String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
// --relation----------------------
  payments      Payment[]
  @@map("payment_plans")
}
       
enum PaymentStatus {
  PENDING
  COMPLETED
  CANCELLED
}
enum BillingCycle {
  MONTHLY
  YEARLY
}
