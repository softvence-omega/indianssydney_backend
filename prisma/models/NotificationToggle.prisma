model NotificationToggle {
  id String @id @default(uuid())

  email            Boolean @default(false)
  userUpdates      Boolean @default(false)
  contentStatus    Boolean @default(false)
  communication    Boolean @default(false)
  surveyAndPoll    Boolean @default(false)
  tasksAndProjects Boolean @default(false)
  scheduling       Boolean @default(false)
  message          Boolean @default(false)
  userRegistration Boolean @default(false)

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
