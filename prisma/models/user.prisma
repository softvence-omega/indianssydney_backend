model User {
  id           String   @id @default(uuid())
  email        String   @unique
  fullName     String?
  password     String?
  role         UserRole @default(USER)
  profilePhoto String?
  bio          String?
  // ------------------google -varify------------------------------------

  googleId       String?   @unique
  emailOtp       Int?
  otpExpiry      DateTime?
  isVerified     Boolean   @default(false)
  ReviewAlerts   Boolean   @default(false)
  // ---------------Password reset OTP----------------------
  resetOtp       Int?
  resetOtpExpiry DateTime?

  isActive        Boolean          @default(true)
  isDeleted       Boolean          @default(false)
  isContibute     Boolean          @default(false)
  deletedAt       DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  // ------ Relations----------------------
  recommendations Recommendation[]
  LiveEven        LiveEvent[]
  constents       Content[]
  comments        Comment[]

  UserNotification   UserNotification[]
  notificationToggle NotificationToggle?

  postReactions          PostReaction[]
  commentReactions       CommentReaction[]
  CommunityPost          CommunityPost[]
  ReportContent          ReportContent[]
  // -----------------Membership----------------------
  Payment                Payment[]
  subscriptionEndsAt     DateTime?
  isMembership           Boolean                  @default(false)
  ApplytoContibute       ApplytoContibute?
  // -------content reaction--------
  contentComment         ContentComment[]
  contentReaction        ContentReaction[]
  contentCommentReaction ContentCommentReaction[]
  statusChanges          ContentStatusHistory[]
  bookmarks              Bookmark[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
  MEMBER
  CONTIBUTOR
}
