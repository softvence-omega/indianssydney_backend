model AiParagraphGeneration {
  id                String   @id @default(uuid())
  paragraph         String?
  originalParagraph String?
  generatedContent  String   @db.Text
  wordCount         Int?
  success           Boolean  @default(false)
  errorMessage      String?
  rawResponse       Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([createdAt])
  @@map("ai_paragraph_generations")
}

model AiSeoTag {
  id               String   @id @default(uuid())
  category         String
  subcategory      String
  title            String?
  sub_title        String?  @map("sub_title")
  content          String?
  tags             String[]
  metaKeywords     String[] @map("meta_keywords")
  titleSuggestions String[] @map("title_suggestions")
  metaDescription  String?  @map("meta_description")
  longTailKeywords String[] @map("long_tail_keywords")
  hashtags         String[]
  contentKeywords  String[] @map("content_keywords")
  success          Boolean  @default(false)
  errorMessage     String?  @map("error_message")
  rawResponse      Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([category, subcategory])
  @@map("ai_seo_tags")
}
